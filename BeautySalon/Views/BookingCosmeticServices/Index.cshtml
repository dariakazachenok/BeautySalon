
@model BookingCosmeticServiceListViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Booking Cosmetic Services</h2>

<div class="row margin-top-10">

    <table class="table table-striped">
        <tr>
            <th>№</th>
            <th>VisitData</th>
            <th>MasterName</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Phone</th>
            <th>Nameservice</th>
            <th>Price</th>
            <th></th>
            <th></th>
        </tr>

        @for (int i = 0; i < Model.BookingCosmeticServices.Count; i++)
         {
            var item = Model.BookingCosmeticServices[i];
            var displayIndex = i + 1;
        <tr>
            <td>
                @displayIndex
            </td>

            <td>
                @item.VisitData
            </td>

            <td>
                @item.MasterName
            </td>

            <td>
                @item.FirstName
            </td>

            <td>
                @item.LastName
            </td>

            <td>
                @item.Phone
            </td>

            <td>
                @item.Nameservice
            </td>

            <td>
                @item.Price
            </td>

            <td>
                <a href="@Url.Action("Update", "BookingCosmeticServices", new { @item.Id })">Edit</a>
            </td>

            <td>
                <a href="@Url.Action("Delete", "BookingCosmeticServices", new { @item.Id })">Delete</a>
            </td>
        </tr>
         }
    </table>
</div>

<div>
    @Html.ActionLink("Go back", "Index", "CosmeticServices")
</div>

