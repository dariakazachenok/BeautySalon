@model CosmeticServiceListViewModel

@{
    ViewData["Title"] = "CosmeticService";
}

<h2>Cosmetic Services</h2>

<div class="row margin-top-10">
    <table class="table table-striped">
        <tr>
            <th>№</th>
            <th>Name service</th>
            <th>Price</th>
           
        </tr>

        @for (int i = 0; i < Model.CosmeticService.Count; i++)
         {
            var item = Model.CosmeticService[i];
            var displayIndex = i + 1;
          <tr>
            <td>
                @displayIndex
            </td>

            <td>
                @item.Nameservice
            </td>

            <td>
                @item.Price
            </td>
          </tr>
         }
    </table>
</div>


<div>
    @Html.ActionLink("Go back to main page", "Index")
    @Html.ActionLink("Add service", "Edit")
</div>


