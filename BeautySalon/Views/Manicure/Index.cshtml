@model ManicureListViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Manicure</h2>

<div class="row margin-top-10">
    <table class="table table-striped">
        <tr>
            <th>№</th>
            <th>Name service</th>
            <th>Price,$</th>
            <th></th>
            <th></th>
        </tr>

        @for (int i = 0; i < Model.Manicure.Count; i++)
        {
            var item = Model.Manicure[i];
            var displayIndex = i + 1;
            <tr>
                <td>
                    @displayIndex
                </td>

                <td>
                    @item.Nameservice
                </td>

                <td>
                    @item.Price
                </td>

                <td>
                    <a href="@Url.Action("Create", "Manicure", new{@item.Id})">Edit</a>
                </td>

                <td>
                    <a href="@Url.Action("Delete", "Manicure", new{@item.Id})">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>

<div>
    @Html.ActionLink("Add service", "Create", "Manicure") </br>

    @Html.ActionLink("Go back to main page", "Index", "Home")
</div>
